<div class="tab-content">
<%= form_for Address.new do |form| %>
  <br>
  <h4>Billing Address/Shipping Address</h4>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-6">
        <div class="form-group">
          <label for="inputFirstName" class="control-label">First Name:<span class="text-error">*</span></label>
            <%= form.text_field :first_name, id: :address_first_name, class: "form-control", id: "billing_inputFirstName" %>

        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
        <label for="inputLastName" class="control-label">Last Name:<span class="text-error">*</span></label>
            <%= form.text_field :last_name, id: :address_last_name, class: "form-control", id: "billing_inputLastName" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-6">
        <div class="form-group">
        <label for="inputAdress1" class="control-label">Address: <span class="text-error">*</span></label>
            <%= form.text_area :address, id: :address_address, class: "form-control", id: "billing_inputAdress1" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-6">
        <div class="form-group">
        <label for="inputPostCode" class="control-label">Zip Code: <span class="text-error">*</span></label>
            <%= form.text_field :zip_code, id: :address_zip_code, class: "form-control", id: "billing_inputPostCode" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
        <label for="inputCity" class="control-label">City: <span class="text-error">*</span></label>
            <%= form.text_field :city, id: :address_city, class: "form-control required", id: "billing_inputCity" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-6">
        <div class="form-group">
        <label class="control-label">Country: <span class="text-error">*</span></label>
        <%= form.text_field :country, id: :address_country, class: "form-control get_states", id: "billing" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
        <label for="inputState" class="control-label">State/Province: <span class="text-error">*</span></label>
          <div class="state_field_div">
          <%= form.text_field :state, id: :address_state, class: "form-control billing_states_collection", id:"order_bill_address_attributes_state_id" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-6">
        <div class="form-group">
        <label for="inputPhone" class="control-label">Phone:<span class="text-error">*</span></label>
            <%= form.text_field :phone, id: :address_phone, class: "form-control", id: "billing_inputPhone" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
        <label for="inputCompany" class="control-label">Company:<span class="text-error"></span></label>
            <%= form.text_field :company, id: :address_company, class: "form-control", id: "billing_inputCompany" %>
        </div>
      </div>
    </div>
  </div>  
<hr>
  <div class="row">
    <div class="col-md-4">
      <%= form.submit "Save and continue", class: "btn btn-danger" %>
    </div>
  </div>
<% end %> 
</div><br/ >