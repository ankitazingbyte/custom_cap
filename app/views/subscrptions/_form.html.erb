<%= form_with(model: subscrption, local: true) do |f| %>
  <% if subscrption.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(subscrption.errors.count, "error") %> prohibited this subscrption from being saved:</h2>

      <ul>
      <% subscrption.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%#= f.hidden_field :plan_id %>
<%#= f.hidden_field :stripe_card_token %>
<%#= f.hidden_field :paypal_customer_token %>
<%#= f.hidden_field :paypal_payment_token %>

<% unless @subscription.payment_provided? %>
  <div class="field">
    <%#= radio_button_tag :pay_with, :card, true %>
    <%#= label_tag :pay_with_card do %>
      <%#= image_tag "visa.png", height: "50px;" %>
      <%#= image_tag "mastercard.png", height: "50px;" %>
      <%#= image_tag "discover.png", height: "50px;" %>
      <%#= image_tag "american-express.png", height: "50px;" %>
      <%#= image_tag "jcb.png", height: "50px;" %>
    <% #end %>
    <%= radio_button_tag :pay_with, :paypal %>
    <%= label_tag :pay_with_paypal do %>
      <%= image_tag "paypal2.png", height: "50px;" %>
    <% end %>
  </div>
<%# end %>

<div id="paypal_checkout" style="display:none">
  <%#= link_to image_tag("paypal.png"), paypal_checkout_path(plan_id: @subscription.plan_id) %>
</div>

<div id="billing_fields">
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <%# if @subscription.payment_provided? %>
    Payment has been provided. Click "Subscribe" to complete the subscription.
  <%# else %>
    <div class="field">
      <%= label_tag :card_number, "Credit Card Number" %>
      <%= text_field_tag :card_number, nil, name: nil %>
    </div>
    <div class="field">
      <%= label_tag :card_code, "Security Code on Card (CVV)" %>
      <%= text_field_tag :cvv, nil, name: nil %>
    </div>
    <div class="field">
      <%= label_tag :card_month, "Card Expiration" %>
      <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
      <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
    </div>
  <%# end %>
  <div id="stripe_error">
    <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
  </div>
  <div class="actions">
    <%= f.submit "Subscribe" %>
  </div>
</div>


<% end %>
  