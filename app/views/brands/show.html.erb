<p id="notice"><%= notice %></p>
<h1> Brand Detail </h1>
<p>
  <strong>Name:</strong>
  <%= @brand.name %>
</p>



<h1> All Products Of Brand </h1>

<%= Brand.products.each do |product| %><br>
<strong>id:</strong>
<td> <%= product.id %></td><br>
<strong>Image:</strong>
<td><%= image_tag product.image.url, class: "img-responsive" if product.image.present? %></td><br>
<strong>title:</strong>
  <td> <%= product.title %></td><br>

<% end %>

