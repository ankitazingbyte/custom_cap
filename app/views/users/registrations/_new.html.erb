<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <label>name</label><br>
        <%= f.text_field :first_name, class: "form-control", id: "spree_user_email", placeholder: "name"%>
  </div>

  <div class="field">
    <label for="inputEMail" class="">E-Mail:<span class="text-error">*</span></label>
    <br />
    <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEMail"%>
  </div>

  <div class="field">
    <label for="inputPassword1" class="">Password: <span class="text-error">*</span></label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "inputPassword1" %>
  </div>

  <div class="field">
    <label for="inputPassword2" class="">Re-Password: <span class="text-error">*</span></label><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "REGISTER", class: "btn btn-default" %>
  </div>
<% end %>