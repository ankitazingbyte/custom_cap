<%= form_for OrderItem.new, remote: true do |f| %>
<%#= number_to_currency order.unit_price %>
    <div class="row">
      <div class="col-xs-4">
        <%#= f.number_field :quantity, value: order.quantity.to_i, class: "form-control", min: 1 %>
        <%#= f.hidden_field :product_id, value: @product.id %>
      </div>
    </div><%#= number_to_currency order.total_price %>
    <div class="actions">
      <%= f.submit "checkout", class: "btn btn-default" %>
    </div>
<% end %>