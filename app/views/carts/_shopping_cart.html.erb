
<% if !@order_item.nil? && @order_item.errors.any? %>
  <div class="alert alert-danger">
    <ul>
    <% @order_item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<% if @order_items.size == 0 %>
  <div class="cart-section">
    <div class="row">
      <div class="col-sm-8 col-md-9">
      <h3><center><strong>Your cart is empty</strong></center></h3>
      <center><a href="/home/index" class="btn btn-default">Continue shopping</a></center>
      </div>
    </div>
  </div>
<% else %>
<h3><strong>Custom Products</strong></h3>
  <table class="cart-table table">
    <% @order_items.each do |order_item| %>
      <%= render 'carts/cart_row', product: order_item.product, order_item: order_item, show_total: true %>
    <% end %>
    <tfoot>
      <tr>
        <td colspan="6">
          <dl class="summary">
            <dt>Subtotal</dt>
            <dd><%= number_to_currency current_order.subtotal %></dd>
            <dt><strong>Order Total</strong></dt>
            <dd><strong><%= number_to_currency current_order.subtotal %></strong></dd>
          </dl>
        </td>
      </tr>
    </tfoot>
  </table>
<% end %>