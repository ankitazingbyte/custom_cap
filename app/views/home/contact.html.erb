<div class="container-fluid">

	<div class="main-section">
		<div class="row">
			<div class="col-md-8 col-md-push-2 col-lg-6 col-lg-push-3">
				<%= form_for :test, url: :home_contact_us_mailer, method: 'post' do |form| %>
				  <div class="text-center">
				    <h1>REQUEST A QUOTE</h1>
				    <p>Need some help with an order? Fill in the form below and weâ€™ll get back to you as soon as possible.</p>
				    <br>
				  </div>
				  <div class="row">
				    <div class="col-sm-6">
				      <div class="form-group">
				      <label for="inputFirstName" class="">FIRST NAME:<span class="text-error">*</span></label>
				      <%= form.text_field :first_name, id: :contact_first_name, class: "form-control" %>
				      </div>
				    </div>
				    <div class="col-sm-6">
				      <div class="form-group">
				        <label for="inputLastName" class="control-label">LAST NAME:<span class="text-error">*</span></label>
				        <%= form.text_field :last_name, id: :contact_last_name, class: "form-control" %>
				      </div>
				    </div>
				  </div>
				  <div class="row">
				    <div class="col-sm-12">
				      <div class="form-group">
				        <label for="inputEmail" class="control-label">EMAIL ADDRESS:<span class="text-error">*</span></label>
				        <%= form.text_field :email, id: :contact_email, class: "form-control" %>
				      </div>
				    </div>
				  </div>
				  <div class="row">
				    <div class="col-sm-12">
				      <div class="form-group">
				        <label for="inputAdress1" class="control-label">STREET ADDRESS:<span class="text-error">*</span></label>
				        <%= form.text_field :street_address, id: :contact_street_address, class: "form-control" %>
				      </div>
				    </div>
				  </div>
				  <div class="row">
				    <div class="col-sm-6">
				      <div class="form-group">
				        <label for="inputCountryName" class="control-label">COUNTRY:<span class="text-error">*</span></label>
				        <%= form.text_field :country, id: :contact_country, class: "form-control" %>
				      </div>
				    </div>
				    <div class="col-sm-6">
				      <div class="form-group">
				        <label for="inputStateName" class="control-label">STATE/PROVINCE:<span class="text-error">*</span></label>
				        <%= form.text_field :state, id: :contact_state, class: "form-control" %>
				      </div>
				    </div>
				  </div>
				  <div class="row">
				    <div class="col-sm-6">
				      <div class="form-group">
				        <label for="inputCityName" class="control-label">CITY:<span class="text-error">*</span></label>
				        <%= form.text_field :city, id: :contact_city, class: "form-control" %>
				      </div>
				    </div>
				    <div class="col-sm-6">
				      <div class="form-group">
				        <label for="inputPostCode" class="control-label">ZIP/POSTAL CODE:<span class="text-error">*</span></label>
				        <%= form.text_field :postal_code, id: :contact_postal_code, class: "form-control" %>
				      </div>
				    </div>
				  </div>
				  <div class="row">
				    <div class="col-sm-6">
				      <div class="form-group">
				        <label for="inputPhone" class="control-label">PHONE:<span class="text-error">*</span></label>
				        <%= form.text_field :phone, id: :contact_phone, class: "form-control" %>
				      </div>
				    </div>
				    <div class="col-sm-6">
				      <div class="form-group">
				        <label for="inputPhone" class="control-label">DESIGN/LOGO:</label>
				        <div class="input-holder">
				        <%= form.file_field :logo, id: :contact_logo, class: "form-control btn btn-default" %>
				        </div>
				      </div>
				    </div>
				  </div>
				  <div class="row">
				    <div class="col-sm-12">
				      <div class="form-group">
				        <label for="inputProductDetails" class="control-label">DETAILS:<span class="text-error">*</span></label>
				        <%= form.text_area :details, id: :contact_details, class: "form-control" %>
				      </div>
				    </div>
				  </div>
				    <br>
				  <div class="text-center">
				    <%= form.submit "SEND REQUEST", class: "btn btn-default" %>
				  </div>
				<% end %>
			</div>
		</div>
	</div>
</div>